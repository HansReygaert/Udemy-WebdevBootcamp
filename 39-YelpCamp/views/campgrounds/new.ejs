<% layout('/layouts/boilerplate') %> 

<div class="row">
   <h1 class="text-center">New Campground</h1>
   <div class="col-6 offset-3">
      <form action="/campgrounds" method="post">
         <!-- TITLE -->
         <div class="mb-3"> 
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]">
         </div>
         <!-- LOCATION -->
         <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]">
         </div>
         <!-- PRICE -->
         <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
               <div class="input-group-prepend">
                 <span class="input-group-text">$</span>
               </div>
               <input id="price" name="campground[price]" type="text" 
               class="form-control" aria-label="Amount (to the nearest dollar)"
               placeholder="0.00" aria-describedby="price-label">
             </div>   
         </div>
         <!-- IMAGE -->
         <div class="mb-3">
            <label class="form-label" for="image">Image URL</label>
            <input class="form-control" type="text" id="image" name="campground[image]">
         </div>
         <!-- Description -->
         <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" 
               id="description" name="campground[description]"></textarea>
         </div>
         <!-- BUTTON -->
         <button class="btn btn-success mb-3">Add a campground</button>
         </form>
         <a href="/campgrounds">All campgrounds</a>
   </div>
</div>