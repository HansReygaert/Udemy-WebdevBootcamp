{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": "./start.sh",
      "crash": "echo '*************** NODEMON CRASHED *******************'"
    },
    "watch": [
      "test/fixtures/",
      "test/samples/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }